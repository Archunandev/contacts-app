<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialogback"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        >

        <com.airbnb.lottie.LottieAnimationView
            app:lottie_rawRes="@raw/loadingbaranim"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/dialogimageconnection"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/texterror1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialogimageconnection"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:text="@string/connection"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"

            />

        <Button
            android:layout_width="150dp"
            android:textColor="@color/truewhite"
            android:layout_height="wrap_content"
            android:background="@drawable/normalbuttondesiign"
            android:text="Try Again"
            android:id="@+id/bttryagain"
            android:drawableBottom="@drawable/ic_refresh_black_24dp"
            android:layout_below="@+id/texterror1"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</RelativeLayout>