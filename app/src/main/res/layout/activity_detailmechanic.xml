<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/truewhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".detailsworkers.Detailmechanic">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main1linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="8dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_height="156dp"
                    android:layout_width="156dp"
                    >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"

              >


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:id="@+id/mechanicphoto"
                android:src="@drawable/arjun"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:padding="2dp"/>


            </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linera1"
                android:layout_marginTop="5dp"
                >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Exact Address"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:gravity="center_horizontal" />



            </LinearLayout>

                <LinearLayout
                    android:id="@+id/linera2"
                    android:layout_below="@+id/linera1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_on_black_24dp"
                        android:layout_margin="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/location"
                        android:id="@+id/locationm"
                        android:textSize="18sp"
                        android:layout_margin="5dp"
                        android:gravity="center_horizontal" />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linera3"
                    android:layout_below="@+id/linera2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_map_24"
                        android:layout_margin="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/location"
                        android:textSize="18sp"
                        android:layout_margin="5dp"
                        android:gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linera4"
                    android:layout_below="@+id/linera3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_score_24"
                        android:layout_margin="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/location"
                        android:textSize="18sp"
                        android:layout_margin="5dp"
                        android:gravity="center_horizontal" />

                </LinearLayout>




            </RelativeLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/main2linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/main1linear"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:text="Thisisyour Namehere"
                    android:id="@+id/namem"
                    android:textSize="26sp"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main3linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/main2linear">

                <RatingBar
                    android:id="@+id/ratinmec"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3.8"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:stepSize="0.1"
                    >

                </RatingBar>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(22+)"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/main4linear"
                android:layout_below="@id/main3linear">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_below="@id/main4linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main5linear"
                    android:orientation="horizontal">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:fabSize="normal"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:elevation="8dp"
                    android:tint="@color/colorPrimary"
                    android:backgroundTint="@color/truewhite"
                    android:clickable="true" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    app:fabSize="normal"
                    android:src="@drawable/ic_message_black_24dp"
                    android:elevation="12dp"
                    android:tint="@color/colorPrimary"
                    android:backgroundTint="@color/truewhite"
                    android:clickable="true" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        app:fabSize="normal"
                        android:src="@drawable/ic_sms_black_24dp"
                        android:elevation="12dp"
                        android:tint="@color/colorPrimary"
                        android:backgroundTint="@color/truewhite"
                        android:clickable="true" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        app:fabSize="normal"
                        android:src="@drawable/ic_location_on_black_24dp"
                        android:elevation="12dp"
                        android:tint="@color/colorPrimary"
                        android:backgroundTint="@color/truewhite"
                        android:clickable="true" />
                </LinearLayout>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/main4linear"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="22dp">

                <RelativeLayout
                    android:id="@+id/main7relate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/main6linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_on_black_24dp"
                            android:layout_margin="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/location"
                            android:textSize="18sp"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal" />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main7linear"
                        android:layout_below="@id/main6linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_on_black_24dp"
                            android:layout_margin="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/location"
                            android:textSize="18sp"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal" />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main8linear"
                        android:layout_below="@+id/main7linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_on_black_24dp"
                            android:layout_margin="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/location"
                            android:textSize="18sp"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal" />



                    </LinearLayout>



                </RelativeLayout>



            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>