<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/truewhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".detailsworkers.Detailelectric">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp"
            tools:context=".detailsworkers.Detailelectric"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageviewdetaile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:padding="2dp"
                    android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/truewhite"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Location"
                    android:textSize="20sp"
                    android:drawableBottom="@drawable/ic_location_on_black_24dp"
                    android:drawableTint="@color/truewhite"/>

                <TextView
                    android:id="@+id/textviewdetail1e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:background="@drawable/textstyle"
                    android:paddingLeft="10dp"
                    android:text="locatione"
                    android:textSize="20sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/truewhite"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/truewhite"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Name"
                    android:textSize="20sp"
                    android:drawableBottom="@drawable/ic_person_black_24dp"
                    android:drawableTint="@color/truewhite"/>

                <TextView
                    android:id="@+id/textviewdetail2e"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/textstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="namee"
                    android:textSize="20sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/truewhite"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/truewhite"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/call_him_directly"
                    android:textSize="20sp"
                    android:drawableBottom="@drawable/ic_phone_black_24dp"
                    android:drawableTint="@color/truewhite"/>

                <TextView
                    android:id="@+id/textviewdetail3e"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/textstyle"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoLink="phone"
                    android:textColorLink="@color/colorPrimary"
                    android:linksClickable="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="phonee"
                    android:textSize="20sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/truewhite"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/truewhite"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/share_location_via_sms"
                    android:textSize="20sp"
                    android:drawableBottom="@drawable/ic_sms_black_24dp"
                    android:drawableTint="@color/truewhite"/>
                <TextView
                    android:id="@+id/textviewdetail4e"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/textstyle"
                    android:textColorLink="@color/truewhite"
                    android:linksClickable="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="sms"
                    android:textSize="20sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/truewhite"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/truewhite"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="@string/share_location_via_whats_app"
                    android:textSize="20sp"
                    android:drawableBottom="@drawable/ic_message_black_24dp"
                    android:drawableTint="@color/truewhite"/>
                <TextView
                    android:id="@+id/textviewdetail5e"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/textstyle"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColorLink="@color/truewhite"
                    android:linksClickable="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="whatsapp"
                    android:textSize="20sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/truewhite"
                    />
                <Button
                    android:id="@+id/startchate"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Click to Chat"
                    android:drawableEnd="@drawable/ic_send_black_24dp"
                    android:background="@drawable/loginbutton"
                    android:textColor="@color/colorPrimary"
                    android:drawableRight="@drawable/ic_send_black_24dp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="(OR)"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/calluselectri"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Call - Us"
            android:background="@drawable/normalbuttondesiign"
            android:textColor="@color/truewhite"
            />

        <Button
            android:id="@+id/sendsmselectri"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/normalbuttondesiign"
            android:text="Send - SMS"
            android:textColor="@color/truewhite"
            />

        <Button
            android:id="@+id/sendwhatsappelectri"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Send - Whatsapp"
            android:background="@drawable/normalbuttondesiign"
            android:textColor="@color/truewhite"
            />

        <Button
            android:id="@+id/mapelectri"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="map"
            android:textColor="@color/truewhite"
            android:background="@drawable/normalbuttondesiign"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/note"
            android:textColor="@color/black"
            android:textSize="10sp"/>
    </LinearLayout>


</ScrollView>